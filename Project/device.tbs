	dim x,y as byte
	dim use_inband as no_yes

	ser.rxbuffrq(0)
	ser.txbuffrq(0)
	sys.buffalloc

	'do we actually need to allocate anything back?
	if num_buffers=0 then
		exit sub
	end if

	x = num_buffers / 2
	y = num_buffers - x
